extends layout

block content
  h1 #{author.name}

  p #[strong Date Of Birth: ] #{author.fomatted_date_of_birth}  
  p #[strong Date Of Death: ] #{author.formatted_date_of_death}  

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    d1
    each book in author_books
      dt
        a(href=book.url) #{book.title}
      dd #{book.summary}

    else
      p This Author has no books

  hr
  p
    a(href=author.url+'/delete') Delete Author